{
  "extends": [
    "github>int128/renovate-base",
    "helpers:pinGitHubActionDigests",
  ],
  "packageRules": [
    {
      "description": "Auto-merge test packages",
      "matchPackageNames": ["jest", "ts-jest", "@types/jest"],
      "matchPackagePrefixes": ["jest-"],
      "groupName": "jest",
      "automerge": true
    },
    {
      "description": "Auto-merge lint packages",
      "matchPackageNames": ["eslint"],
      "matchPackagePrefixes": ["eslint-", "@typescript-eslint/"],
      "groupName": "eslint",
      "automerge": true
    },
    {
      "description": "Update Node version of action",
      "matchPackageNames": [
        "node",
        "@types/node",
        "@tsconfig/node16",
        "@tsconfig/node20",
      ],
      "groupName": "github-actions-node",
      "versioning": "npm",
      "allowedVersions": "20.x"
    },
    {
      "description": "Update @tsconfig/node version",
      "matchPackageNames": ["@tsconfig/node16"],
      "replacementName": "@tsconfig/node20",
      "replacementVersion": "^20",
    }
  ],
  "regexManagers": [
    {
      "description": "Update using field in action.yaml",
      "fileMatch": [
        "^action.ya?ml$",
        "^.+/action.ya?ml$"
      ],
      "matchStrings": ["using: 'node(?<currentValue>\\d+)'"],
      "depNameTemplate": "node",
      "datasourceTemplate": "npm"
    },
    {
      "description": "Update @tsconfig/node in tsconfig.json",
      "fileMatch": ["^tsconfig.json$"],
      "matchStrings": ["@tsconfig/node(?<currentValue>\\d+)"],
      "depNameTemplate": "node",
      "datasourceTemplate": "npm"
    },
    {
      "description": "Update this config by self",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "int128/typescript-action-renovate-config",
      "fileMatch": [
        "^renovate\\.json5?$",
        "^\\.github/renovate\\.json5?$",
      ],
      "matchStrings": [
        "\"github>int128/typescript-action-renovate-config#(?<currentValue>.+?)\"",
        "\"github>int128/typescript-action-renovate-config:.+?#(?<currentValue>.+?)\""
      ]
    }
  ],
}
